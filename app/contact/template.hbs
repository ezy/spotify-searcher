<h1>Contact</h1>
<br>
<div class="form-horizontal form-group form-group-lg">
  <div class="row">
    <div class="col-md-12">
      {{input class="form-control" placeholder="Your email" value=email}}
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-12">
      {{textarea class="form-control" placeholder="Your message. (At least 5 characters.)" rows="7" value=message}}
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-md-3">
      <button disabled= {{unless isValid 'disabled'}} {{action 'sendMessage'}} class="btn btn-primary btn-lg btn-block">Send message</button>
    </div>
  </div>
</div>
{{#if responseMessage}}
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="alert alert-success">{{responseMessage}}</div>
    </div>
  </div>
{{/if}}
