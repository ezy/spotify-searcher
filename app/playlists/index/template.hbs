<h1>Playlists list</h1>

<p>
  {{link-to "New Playlists" "playlists.new" }}
</p>

{{#if model.length}}
  <table>
    <thead>
      <tr>
        <th colspan="3">
          Actions
        </th>
      </tr>
    </thead>
    <tbody>
      {{#each model as |playlists|}}
        <tr>
          <td>
            {{link-to "Edit" "playlists.edit" playlists}}
          </td>
          <td>
            {{link-to "Show" "playlists.show" playlists}}
          </td>
          <td>
            <a href="#" {{action "remove" playlists}}>Remove</a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  <p id="blankslate">
    No Playlists found
  </p>
{{/if}}
